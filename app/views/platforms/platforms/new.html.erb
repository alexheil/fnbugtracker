<%= provide(:title, "Create New Platform") %>

<div class="wrapper">
  <div class="container">
    <div class="form-container padding-vertical-large">

      <div class="mid-text padding-bottom-large center">
        Create new platform
      </div>

      <div class="padding-bottom">
        <%= form_for(@platform, url: platforms_path) do |f| %>
          <%= render 'partials/errors/platform_errors' %>
          <div class="field">
            <%= f.text_field :title, placeholder: "Title", class: "text-field" %>
          </div>
          <div class="actions">
            <%= f.submit "Create platform", class: "submit-button" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
